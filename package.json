{
  "name": "contracts",
  "scripts": {
    "node": "npx hardhat node",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "deploy:main:erc20": "npx hardhat run scripts/deployERC20.ts --network main",
    "deploy:main:identity-example": "npx hardhat run scripts/deployIdentityExample.ts --network main",
    "deploy:main:balance-credential-issuer": "npx hardhat run scripts/deployBalanceCredentialIssuer.ts --network main",
    "deploy:main:sig": "npx hardhat run scripts/deploySigV2Validator.ts --network main",
    "deploy:main:mtp": "npx hardhat run scripts/deployMTPV2Validator.ts --network main",
    "upgrade:main:sigv2": "npx hardhat run scripts/upgradeSigValidator.ts --network main",
    "upgrade:main:mtpv2": "npx hardhat run scripts/upgradeMTPValidator.ts --network main",
    "deploy:opt-sepolia:sig": "npx hardhat run scripts/deploySigV2Validator.ts --network opt-sepolia",
    "deploy:opt-sepolia:mtp": "npx hardhat run scripts/deployMTPV2Validator.ts --network opt-sepolia",
    "deploy:opt-sepolia:erc20": "npx hardhat run scripts/deployERC20.ts --network opt-sepolia",
    "deploy:opt-sepolia:identity-example": "npx hardhat run scripts/deployIdentityExample.ts --network opt-sepolia",
    "deploy:opt-sepolia:balance-credentialissuer": "npx hardhat run scripts/deployBalanceCredentialIssuer.ts --network opt-sepolia",
    "deploy:opt-sepolia:erc20-linked-universal-verifier": "npx hardhat run scripts/deployERC20LinkedUniversalVerifier.ts --network opt-sepolia",
    "deploy:opt-sepolia:erc20-selective-disclosure-verifier": "npx hardhat run scripts/deployERC20SelectiveDisclosureVerifier.ts --network opt-sepolia",
    "upgrade:opt-sepolia:sigv2": "npx hardhat run scripts/upgradeSigValidator.ts --network opt-sepolia",
    "upgrade:opt-sepolia:mtpv2": "npx hardhat run scripts/upgradeMTPValidator.ts --network opt-sepolia",
    "setrequests:opt-sepolia:v2": "npx hardhat run scripts/setRequests-v2validator.ts --network opt-sepolia",
    "setrequests:opt-sepolia:v3": "npx hardhat run scripts/setRequests-v3validator.ts --network opt-sepolia",
    "setrequests:opt-sepolia:v3-sd": "npx hardhat run scripts/setRequests-v3validator-sd.ts --network opt-sepolia",
    "format": "prettier --write scripts/*.ts test/**/*.ts",
    "lint:contracts": "npx solhint contracts/**/*.sol",
    "prettier:contracts": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'"
  },
  "devDependencies": {
    "@0xpolygonid/js-sdk": "1.14.1",
    "@iden3/js-jsonld-merklization": "1.2.0",
    "@iden3/contracts": "^2.3.0",
    "@iden3/js-crypto": "^1.1.0",
    "@iden3/js-iden3-core": "^1.3.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.5",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.0.5",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "async": "^3.2.3",
    "circomlibjs": "^0.1.7",
    "dotenv": "^16.4.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "ethereumjs-util": "^7.1.4",
    "hardhat": "^2.22.2",
    "jsonfile": "^6.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.1.1",
    "random-bytes": "^1.0.0",
    "solhint": "4.1.1",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-bytes-utils": "^0.8.0",
    "typescript": "^5.4.4",
    "web3": "^4.7.0"
  }
}